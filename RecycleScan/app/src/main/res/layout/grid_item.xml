<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewProduct"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/marshmallow" />

    <TextView
        android:id="@+id/textViewProduktname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:lines="1"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="@+id/imageViewProduct"
        app:layout_constraintStart_toStartOf="@+id/imageViewProduct"
        app:layout_constraintTop_toBottomOf="@+id/imageViewProduct" />

    <View
        android:id="@+id/view9"
        android:layout_width="0dp"
        android:layout_height="23dp"
        app:layout_constraintEnd_toEndOf="@+id/imageViewProduct"
        app:layout_constraintStart_toStartOf="@+id/imageViewProduct"
        app:layout_constraintTop_toBottomOf="@+id/textViewProduktname" />

</android.support.constraint.ConstraintLayout>